.listening-page-comment{
    background: #fff;
    padding: 15px 30px;
    border-top: solid 1px #e5e5e5;/* no */
    display:flex;
    align-items: center;

    .input-display{
        display: flex;
        height: 70px;
        align-items: center;
        background: #f5f2f2;
        border-radius: 100px;
        font-size: 30px;/* px */
        color: #999090;
        padding: 0 20px;
        flex:1;
    }


    .comment-contaier{
        padding: 20px 0;
        flex:1;

        .comment-textarea{
            display: block;
            border: none;
            height: 210px;
            background: #f5f2f2;
            border-radius: 6px;
            font-size: 30px;/* px */
            line-height: 40px;/* px */
            color: #424242;
            padding:20px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-send{
            float: right;
            width: 140px;
            height: 65px;
            border-radius: 6px;
            background: #ef546e;
            text-align: center;
            line-height: 65px;
            font-size: 30px;/* px */
            color: #fff;
            margin-top: 20px;
        }
        .btn-send-no-content{
            float: right;
            width: 140px;
            height: 65px;
            border-radius: 6px;
            background: #ef547062;
            text-align: center;
            line-height: 65px;
            font-size: 30px;/* px */
            color: #fff;
            margin-top: 20px;
        }

    }

    .btn-listen-backstage{
        position: relative;
        flex-shrink: 0;
        color: #a8a2a2;
        font-size: 20px;/* px */
        cursor: pointer;
        margin-left:20px;
        text-align: center;

        img{
            display: block;
            margin: 0 auto 10px;
            width: 43px;
            height: 44px;
        }
    }

}